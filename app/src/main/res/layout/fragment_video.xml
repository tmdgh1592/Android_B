<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/category_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:text="최신순"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/category_icon_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/category_icon_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/category_btn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/music_video_card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_btn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <VideoView
                    android:id="@+id/music_video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/video_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:background="@color/black"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="1dp"
                    android:text="23:14"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/mv_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="[MV] Good Night"
            android:textColor="@color/titleTextColor"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/music_video_card_view" />

        <TextView
            android:id="@+id/mv_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="쿠기 (Coogie)(Ft. BE'O) - Good Night (Prod. GRAY)  [RE:UP]"
            android:textColor="@color/detailTextColor"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mv_title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>