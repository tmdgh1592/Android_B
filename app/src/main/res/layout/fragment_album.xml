<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/album_like_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintBottom_toBottomOf="@+id/album_more_iv"
        app:layout_constraintTop_toTopOf="@+id/album_more_iv"
        app:layout_constraintEnd_toStartOf="@+id/album_more_iv"/>


    <ImageView
        android:id="@+id/album_more_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/album_back_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_arrow_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/album_music_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="IU 5th Album 'LILAC'"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_back_iv"/>

    <TextView
        android:id="@+id/album_singer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="아이유 (IU)"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/album_music_title_tv"
        app:layout_constraintStart_toStartOf="@+id/album_music_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/album_music_title_tv"/>

    <TextView
        android:id="@+id/album_music_title_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="2022.03.24 | 정규 | 댄스 팝"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/album_singer_name_tv"
        app:layout_constraintStart_toStartOf="@+id/album_singer_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/album_singer_name_tv"/>

    <ImageView
        android:id="@+id/album_album_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_music_title_info_tv"/>

    <ImageView
        android:id="@+id/album_lp_iv"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginStart="155dp"
        android:src="@drawable/img_album_lp"
        app:layout_constraintBottom_toBottomOf="@+id/album_album_iv"
        app:layout_constraintTop_toTopOf="@+id/album_album_iv"
        app:layout_constraintStart_toStartOf="@+id/album_album_iv"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/widget_black_play"
        app:layout_constraintBottom_toBottomOf="@+id/album_album_iv"
        app:layout_constraintEnd_toEndOf="@+id/album_album_iv"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#3f3fff"
        app:tabIndicatorColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintEnd_toEndOf="@+id/album_album_iv"
        app:layout_constraintStart_toStartOf="@+id/album_album_iv"
        app:layout_constraintTop_toBottomOf="@+id/album_album_iv"/>

    <TextView
        android:id="@+id/song_my_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="내 취향 MIX"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/album_content_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/song_my_like_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/song_my_like_tv"
        app:layout_constraintTop_toTopOf="@+id/song_my_like_tv"
        app:layout_constraintBottom_toBottomOf="@+id/song_my_like_tv"/>

    <ImageView
        android:id="@+id/song_all_select_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/song_all_select_tv"
        app:layout_constraintBottom_toBottomOf="@+id/song_all_select_tv"/>


    <TextView
        android:id="@+id/song_all_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="전체 선택"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/song_all_select_iv"
        app:layout_constraintTop_toBottomOf="@+id/song_my_like_switch"/>

    <ImageView
        android:id="@+id/song_all_listen_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="3dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/icon_browse_arrow_right"
        app:layout_constraintTop_toBottomOf="@+id/song_my_like_switch"
        app:layout_constraintEnd_toStartOf="@+id/song_all_listen_tv"/>


    <TextView
        android:id="@+id/song_all_listen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="전체 듣기"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/song_all_listen_iv"
        app:layout_constraintBottom_toBottomOf="@+id/song_all_listen_iv"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/song_all_select_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/song_music_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/song_lilac_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/song_list_order_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="01"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/song_list_title_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="LILAC"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/song_list_order_01_tv"
                    app:layout_constraintStart_toEndOf="@+id/song_list_order_01_tv"/>

                <TextView
                    android:id="@+id/song_list_name_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="40dp"
                    android:textSize="10sp"
                    android:text="아이유 (IU)"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/song_list_title_01_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_miniplay_mvplay"
                    app:layout_constraintEnd_toStartOf="@+id/song_list_more_01_iv"
                    app:layout_constraintTop_toTopOf="@+id/song_list_more_01_iv"/>

                <ImageView
                    android:id="@+id/song_list_more_01_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/song_smiley_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/song_list_order_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="02"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/song_list_title_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="SMILEY(Feat. BIBI)"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/song_list_order_02_tv"
                    app:layout_constraintStart_toEndOf="@+id/song_list_order_02_tv"/>

                <TextView
                    android:id="@+id/song_list_name_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="40dp"
                    android:textSize="10sp"
                    android:text="YENA (최예나)"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/song_list_title_02_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_miniplay_mvplay"
                    app:layout_constraintEnd_toStartOf="@+id/song_list_more_02_iv"
                    app:layout_constraintTop_toTopOf="@+id/song_list_more_02_iv"/>

                <ImageView
                    android:id="@+id/song_list_more_02_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/song_rain_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/song_list_order_03_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="03"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/song_list_title_03_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Rain"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/song_list_order_03_tv"
                    app:layout_constraintStart_toEndOf="@+id/song_list_order_03_tv"/>

                <TextView
                    android:id="@+id/song_list_name_03_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="40dp"
                    android:textSize="10sp"
                    android:text="태연 (TAEYEON)"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/song_list_title_03_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_miniplay_mvplay"
                    app:layout_constraintEnd_toStartOf="@+id/song_list_more_03_iv"
                    app:layout_constraintTop_toTopOf="@+id/song_list_more_03_iv"/>

                <ImageView
                    android:id="@+id/song_list_more_03_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/song_parachute_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/song_list_order_04_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="04"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/song_list_title_04_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="parachute"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/song_list_order_04_tv"
                    app:layout_constraintStart_toEndOf="@+id/song_list_order_04_tv"/>

                <TextView
                    android:id="@+id/song_list_name_04_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="40dp"
                    android:textSize="10sp"
                    android:text="John K"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/song_list_title_04_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_miniplay_mvplay"
                    app:layout_constraintEnd_toStartOf="@+id/song_list_more_04_iv"
                    app:layout_constraintTop_toTopOf="@+id/song_list_more_04_iv"/>

                <ImageView
                    android:id="@+id/song_list_more_04_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/song_shape_of_you_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/song_list_order_05_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="05"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/song_list_title_05_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Shape of You"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/song_list_order_05_tv"
                    app:layout_constraintStart_toEndOf="@+id/song_list_order_05_tv"/>

                <TextView
                    android:id="@+id/song_list_name_05_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="40dp"
                    android:textSize="10sp"
                    android:text="Ed Sheeran"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/song_list_title_05_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_miniplay_mvplay"
                    app:layout_constraintEnd_toStartOf="@+id/song_list_more_05_iv"
                    app:layout_constraintTop_toTopOf="@+id/song_list_more_05_iv"/>

                <ImageView
                    android:id="@+id/song_list_more_05_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/song_power_up_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/song_list_order_06_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="06"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/song_list_title_06_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Power Up"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/song_list_order_06_tv"
                    app:layout_constraintStart_toEndOf="@+id/song_list_order_06_tv"/>

                <TextView
                    android:id="@+id/song_list_name_06_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="40dp"
                    android:textSize="10sp"
                    android:text="Red Velvet (레드벨벳)"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/song_list_title_06_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_miniplay_mvplay"
                    app:layout_constraintEnd_toStartOf="@+id/song_list_more_06_iv"
                    app:layout_constraintTop_toTopOf="@+id/song_list_more_06_iv"/>

                <ImageView
                    android:id="@+id/song_list_more_06_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>