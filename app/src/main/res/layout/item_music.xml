<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/music_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/music_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/music_title_tv"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/title_badge_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/music_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/music_title_tv"
        android:text="TITLE"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/music_number_tv"
        app:layout_constraintRight_toLeftOf="@+id/music_title_tv"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="6dp"
        android:background="@drawable/bg_title_song"
        android:backgroundTint="@color/titleSongColor"/>

    <TextView
        android:id="@+id/music_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@+id/play_btn"
        app:layout_constraintLeft_toRightOf="@+id/title_badge_view"
        android:layout_marginHorizontal="10dp"
        tools:text="Comin' At Ya (feat. Chillin Homie)"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/music_singer_tv"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/music_singer_tv"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="@+id/music_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/music_title_tv"
        tools:text="Rohann(이로한)"
        android:textColor="#939393"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/music_title_tv"
        android:maxLines="1"
        android:ellipsize="end"/>


    <ImageView
        android:id="@+id/play_btn"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/more_btn"
        android:src="@drawable/btn_player_play"/>

    <ImageView
        android:id="@+id/more_btn"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/btn_player_more"
        app:tint="#B8B8B8"/>

</androidx.constraintlayout.widget.ConstraintLayout>