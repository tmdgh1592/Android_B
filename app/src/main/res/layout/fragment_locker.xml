<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="40dp"
    android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="보관함"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locker_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Klein"
        android:textColor="#333333"
        android:textSize="14.5sp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintRight_toLeftOf="@+id/locker_login_tv"
        app:layout_constraintTop_toTopOf="@+id/title_tv" />

    <TextView
        android:id="@+id/locker_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="로그인"
        android:textColor="@color/select_color"
        android:textSize="14.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="16dp"
        android:background="@color/tabLayoutDividerColor"
        app:layout_constraintBottom_toBottomOf="@+id/locker_tb" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/locker_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:tabBackground="@drawable/bg_tab_indicator"
        app:tabIndicatorColor="#3f3fff"
        app:tabIndicatorFullWidth="false"
        app:tabMode="auto"
        app:tabRippleColor="#00ff0000"
        app:tabSelectedTextColor="#3f3fff"
        app:tabTextAppearance="@style/tabTextTheme"
        app:tabTextColor="#1C1C1C" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/locker_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locker_tb"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>