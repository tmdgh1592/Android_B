                    <ImageView
                        android:id="@+id/home_daily_music_album_img_play_01_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
